{
    "commit-msg": {
        "enabled": true,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "bin/graphql-client-code-generator --config=examples/config.php --config=tests/config.php --ensure-sync"
            },
            {
                "action": "composer validate --strict"
            },
            {
                "action": "composer normalize --diff --dry-run"
            },
            {
                "action": "vendor/bin/composer-dependency-analyser"
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
            },
            {
                "action": "vendor/bin/php-cs-fixer check --diff"
            },
            {
                "action": "vendor/bin/phpstan"
            },
            {
                "action": "vendor/bin/phpunit"
            }
        ]
    }
}
